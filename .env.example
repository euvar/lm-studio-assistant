# LM Studio Configuration
LM_STUDIO_URL=http://localhost:1234/v1
LM_STUDIO_MODEL=default

# Application Configuration
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Cache Configuration
ENABLE_CACHE=true
CACHE_SIZE=1000
CACHE_TTL=3600000  # 1 hour in milliseconds

# Error Handling & Retry Configuration
MAX_RETRIES=3
RETRY_BASE_DELAY=1000
RETRY_MAX_DELAY=30000
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_RESET_TIMEOUT=60000  # 1 minute

# Performance Optimization
ENABLE_BATCHING=true
BATCH_TIMEOUT=100  # milliseconds
MAX_BATCH_SIZE=10
ENABLE_SMALL_MODEL_ROUTING=true
COMPLEXITY_THRESHOLD=0.3
ENABLE_REQUEST_DEDUPLICATION=true

# Queue Configuration
MAX_CONCURRENT_REQUESTS=3
MAX_QUEUE_SIZE=100
REQUEST_TIMEOUT=120000  # 2 minutes

# Telemetry Configuration
ENABLE_TELEMETRY=true
TELEMETRY_FLUSH_INTERVAL=30000  # 30 seconds
TELEMETRY_METRICS_INTERVAL=60000  # 1 minute
TELEMETRY_LOG_PATH=./telemetry

# Security Configuration
ENABLE_SECURITY_VALIDATION=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=20

# Redis Configuration (optional)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Monitoring (optional)
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=false
GRAFANA_PORT=3001
GRAFANA_PASSWORD=admin

# Model Routing Strategy
# Options: cost, performance, capability, round-robin
ROUTING_STRATEGY=capability
ENABLE_MODEL_FALLBACK=true

# Primary Model Configuration
PRIMARY_MODEL_NAME=primary-large
PRIMARY_MODEL_ENDPOINT=http://localhost:1234/v1
PRIMARY_MODEL_MAX_TOKENS=8192

# Secondary Model Configuration (optional)
SECONDARY_MODEL_ENABLED=false
SECONDARY_MODEL_NAME=secondary-medium
SECONDARY_MODEL_ENDPOINT=http://localhost:1235/v1
SECONDARY_MODEL_MAX_TOKENS=4096

# Fallback Model Configuration (optional)
FALLBACK_MODEL_ENABLED=false
FALLBACK_MODEL_NAME=fallback-small
FALLBACK_MODEL_ENDPOINT=http://localhost:1236/v1
FALLBACK_MODEL_MAX_TOKENS=2048